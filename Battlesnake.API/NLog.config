<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
	    internalLogLevel="Warn"
      internalLogFile="${basedir}/Logs/NLogInternal//debug-${shortdate}.log">

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <targets async="true">
    <target xsi:type="EventLog" name="eventlog" source="EkgViewer" log="Application" layout="${time} [${level}]: ${message}${onexception:${newline}${exception:format=ToString:maxInnerExceptionLevel=2}}"/>
    <target xsi:type="Trace" name="trace" layout="${time} [${level}]: ${message}${onexception:${newline}${exception:format=ToString:maxInnerExceptionLevel=2}}"/>
    <target name="debugFile" xsi:type="File" layout="${time} [${level}]: ${message}${onexception:${newline}${exception:format=ToString:maxInnerExceptionLevel=2}}" fileName="${basedir}/logs/Debug-${shortdate}.log"/>
    <target name="infoFile" xsi:type="File" layout="${time} [${level}]: ${message}${onexception:${newline}${exception:format=ToString:maxInnerExceptionLevel=2}}" fileName="${basedir}/Logs/Info-${shortdate}.log"/>
  </targets>

  <rules>
    <logger name="*" minlevel="Error" writeTo="eventlog"/>
    <logger name="*" minlevel="Debug" writeTo="trace"/>
    <logger name="*" minlevel="Debug" writeTo="debugFile"/>
    <logger name="*" minlevel="Info" writeTo="infoFile"/>
  </rules>
</nlog>